<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_header"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/document_title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/not_complete_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="This product is not complete, please contact Customer Service."
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/main_footer"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="6dp" >


        <Button
            android:id="@+id/main_button_sync"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSettingButtonClick"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="SETTING"
            android:textSize="14dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/doc_button_share"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:onClick="onShareButtonClick"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp"
            android:text="SHARE"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>