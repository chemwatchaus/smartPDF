<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_enabled="true"><shape>
            <solid android:color="#198d9aac" />

            <stroke android:width="1dp" android:color="#8d9aac" />

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
        </shape></item>
    <item android:state_pressed="false" android:state_enabled="false"><shape>
            <gradient android:endColor="#22cccccc" android:gradientRadius="111.0" android:startColor="#0000c6ff" android:type="radial" />

            <stroke android:width="1dp" android:color="#77cccccc" />

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:endColor="#2200c6ff" android:gradientRadius="111.0" android:startColor="#0000c6ff" android:type="radial" />

            <stroke android:width="1dp" android:color="#00c6ff" />

            <corners android:bottomLeftRadius="6dp" android:bottomRightRadius="6dp" android:topLeftRadius="6dp" android:topRightRadius="6dp" />
        </shape></item>

</selector>